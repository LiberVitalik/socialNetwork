{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-console": false,
        // 2.1, 13.1
        "prefer-const": true,
        // 2.2
        "no-var-keyword": true,

        "no-var-requires": false,

        // 3.3, 3.4
        "object-literal-shorthand": true,
        // 3.6
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        // 6.1, 6.5
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ],
        // 6.3
        "prefer-template": true,
        // 6.4
        "no-eval": true,
        "space-before-function-paren": [
            true,
            {
                // 7.11
                "anonymous": "always",
                // 19.3
                "named": "never"
            }
        ],
        // 20.2
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "never",
                    "arrays": "always"
                },
                "singleline": "never"
            }
        ],
        // 21.1
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],

        "jsx-wrap-multiline": true,
        "no-empty-interface": false,
        "jsx-boolean-value": false
    }
}
